{% extends 'WarlordsGameBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/profile.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="mainitem">
        <div class="header">
			<div class="title"><h1>Buy Soldiers</h1></div>
		</div>
        <div class="content">
            {% if berror is defined %}
                <div class="loginerror">{{ berror }}</div>
            
            {% elseif info %}
                <div class="information">
                <h2>{{ info }}</h2>
                <p>You have purchased:<br />
                
                {% if soldiers is not empty %}
                {{ soldiers }} Soldiers  <br />
                {% endif %}
                
                {% if knights is not empty %}
                {{ knights }} Knights  <br />
                {% endif %}
                
                {% if calvary is not empty %}
                {{ calvary }} Calvary  <br />
                {% endif %}
                
                {% if soldiers and calvary and knights %}
                for {{ gold }} gold.<br />
                {% endif %}
                </div>
            {% else %}
                <div class="loginerror">Nothing is purchased.</div>
            {% endif %}
            <p><a href="{{ path('WarlordsGameBundle_profile') }}">Return to profile</a></p>
        </div>
		<div class="footer"></div>
	</div>
{% endblock %}

